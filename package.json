{
  "name": "cc-thu",
  "displayName": "ccThu",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "bun@1.1.9",
  "author": {
    "name": "chillcicada",
    "email": "2210227279@qq.com"
  },
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/chillcicada/ccthu",
  "repository": {
    "type": "git",
    "url": "https://github.com/chillcicada/ccthu"
  },
  "bugs": {
    "url": "https://github.com/chillcicada/ccthu/issues"
  },
  "keywords": [
    "API server",
    "THU",
    "Bun",
    "Elysia"
  ],
  "module": "index.ts",
  "scripts": {
    "dev": "NODE_ENV=development bun --watch index.ts",
    "dev:test": "NODE_ENV=test bun test --update-snapshots --watch ./test/index.test.ts",
    "build": "bunx rimraf dist && NODE_ENV=production bun build.ts",
    "start": "NODE_ENV=production bun index.ts",
    "test:ui": "bunx vitest --ui --coverage.enabled=true",
    "test:unit": "bunx vitest --run",
    "test:cov": "bunx vitest run --coverage",
    "test:watch": "bunx vitest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:type": "tsc --noEmit",
    "postinstall": "bunx simple-git-hooks"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/cron": "^1.0.3",
    "@elysiajs/swagger": "^1.0.5",
    "cheerio": "^1.0.0-rc.12",
    "elysia": "^1.0.15",
    "entities": "^4.5.0",
    "vanjs-core": "^1.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.16.0",
    "@elysiajs/eden": "^1.0.12",
    "@types/bun": "latest",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "domhandler": "^5.0.3",
    "eslint": "8.57.0",
    "eslint-plugin-format": "^0.1.1",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.7",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.0.2",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*.test.ts": "vitest related --run",
    "*.{ts,json}": "eslint --fix"
  }
}
